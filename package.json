{
  "name": "xsphere-gaming-suite",
  "version": "0.1.0",
  "description": "Multi-game blockchain gaming platform on MultiversX",
  "main": "index.js",
  "scripts": {
    "dev": "cd frontend && next dev",
    "build": "cd frontend && next build",
    "start": "cd frontend && next start",
    "lint": "cd frontend && next lint",
    "export": "cd frontend && next export",
    "analyze": "cd frontend && ANALYZE=true npm run build",
    "optimize": "node scripts/optimize-build.js",
    "optimize:analyze": "node scripts/optimize-build.js --analyze",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:github": "npm run build && npm run export && gh-pages -d frontend/out",
    "contract:build": "mxpy contract build contracts/",
    "contract:test": "mxpy contract test contracts/",
    "contract:deploy": "npm run deploy:devnet",
    "deploy:devnet": "mxpy contract deploy --bytecode=contracts/output/xsphere-core.wasm --pem=wallet.pem --gas-limit=20000000 --proxy=https://devnet-gateway.multiversx.com --chain=D",
    "deploy:testnet": "mxpy contract deploy --bytecode=contracts/output/xsphere-core.wasm --pem=wallet.pem --gas-limit=20000000 --proxy=https://testnet-gateway.multiversx.com --chain=T",
    "setup:env": "mxpy deps install",
    "test": "cd frontend && jest",
    "test:watch": "cd frontend && jest --watch",
    "test:coverage": "cd frontend && jest --coverage",
    "lighthouse": "lighthouse https://xsphere-gaming-suite.vercel.app --view",
    "perf:audit": "npm run lighthouse && npm run analyze",
    "setup:project": "npm install && npm run setup:env",
    "clean": "rm -rf frontend/.next frontend/out node_modules/.cache",
    "postinstall": "chmod +x scripts/optimize-build.js"
  },
  "keywords [
    "blockchain",
    "gaming",
    "nft",
    "multiversx",
    "web3",
    "defi",
    "gamefi",
    "react",
    "typescript",
    "smart-contracts",
    "rust",
    "vercel",
    "deployment",
    "free-tier"
  ],
  "author": "George Pricop <pricopgeorge@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@multiversx/sdk-core": "^15.0.0",
    "@multiversx/sdk-dapp": "^5.4.0",
    "@multiversx/sdk-wallet": "^4.0.0",
    "@multiversx/sdk-network-providers": "^2.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.4.0",
    "tailwindcss": "^3.4.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "zustand": "^4.5.0",
    "axios": "^1.7.0",
    "@tanstack/react-query": "^5.0.0",
    "bignumber.js": "^9.1.0",
    "dayjs": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@next/bundle-analyzer": "^15.0.0",
    "lighthouse": "^11.0.0",
    "gh-pages": "^6.0.0",
    "imagemin": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/xsphere-gaming-suite.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/xsphere-gaming-suite/issues"
  },
  "homepage": "https://xsphere-gaming-suite.vercel.app",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Gzeu"
  }
}